<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>
	
 	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
	   	<layout class="org.apache.log4j.PatternLayout">
	    	<param name="ConversionPattern" value="%d{ABSOLUTE}%5p %C:%L - %m%n"/>
		</layout>
    </appender>
    
    <appender name="file" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="logs/adit.log" />
		<param name="datePattern" value="'.'yyyy-MM" />
		<param name="append" value="true" /> 
		<layout class="org.apache.log4j.PatternLayout">
	    	<param name="ConversionPattern" value="%d{ABSOLUTE}%5p %C:%L - %m%n"/>
		</layout>
    </appender>
    
    <appender name="dvk" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="/bea/user_projects/domains/arendus/log/adit/adit_dvk.log" />
		<param name="datePattern" value="'.'yyyy-MM" />
		<param name="append" value="true" /> 
		<layout class="org.apache.log4j.PatternLayout">
	    	<param name="ConversionPattern" value="%d{ABSOLUTE}%5p %C:%L - %m%n"/>
		</layout>
    </appender>
    
   <appender name="nagios" class="org.apache.log4j.nagios.NagiosAppender">
      <param name="Host" value="localhost"/>
      <param name="Port" value="5667"/>

      <param name="ConfigFile" value="nsca_send_clear.cfg"/>


      <param name="ServiceNameDefault" value="APPLICATION_FOOBAR"/>
      <!--
      <param name="useMDCServiceName" value="true"/>
      <param name="MDCServiceNameKey" value="instance"/>
      -->

      <param name="useShortHostName" value="false"/>
      <!--
      <param name="useMDCHostName" value="true"/>
      <param name="MDCHostNameKey" value="nagios_host_name"/>
      <param name="InitializeMDCHostNameValue" value="virtual_backroom"/>
      -->

      <param name="MDCCanonicalHostNameKey" value="nagios_canonical_hostname"/>

      <!--
      <param name="Log4j_Level_DEBUG"    value="NAGIOS_UNKNOWN"/>
      <param name="Log4j_Level_INFO"     value="NAGIOS_OK"/>
      -->
      <param name="Log4j_Level_WARN"     value="NAGIOS_WARN"/>
      <param name="Log4j_Level_ERROR"    value="NAGIOS_CRITICAL"/>
      <param name="Log4j_Level_FATAL"    value="NAGIOS_CRITICAL"/>

      <!--
      <param name="IncludeFilterEnabled"    value="false"/>
      <param name="ExcludeFilterEnabled"    value="false"/>
      <param name="PatternFilterFile"    value="../server/all/conf/NagiosIncludeExcludeFilters.properties"/>
      -->

      <param name="SendStartupMessageOK" value="Application Errors Cleared"/>

      <layout class="org.apache.log4j.PatternLayout">
         <!-- This layout will pre-pend the physical hostname at the beginning of the message -->
         <param name="ConversionPattern" value="%X{nagios_canonical_hostname}: %m%n"/>
      </layout>
  </appender>
    
    <logger name="ee.adit.ws">
    	<level value="DEBUG"></level>
    	<appender-ref ref="file" />
    </logger>
    
    <logger name="ee.adit.util">
    	<level value="DEBUG"></level>
    </logger>
    
    <logger name="ee.adit.dao">
    	<level value="DEBUG"></level>
    	<appender-ref ref="file" />
    </logger>
    
    <logger name="ee.adit.service">
    	<level value="DEBUG"></level>
    	<appender-ref ref="file" />
    </logger>
    
    <logger name="dvk">
    	<level value="DEBUG"></level>
    	<appender-ref ref="file" />
    </logger>
    
    <logger name="ee.adit.dvk">
    	<level value="DEBUG"/>
    	<appender-ref ref="dvk"/>
    	<appender-ref ref="stdout" />    	
    </logger>
    
    <logger name="org.hibernate">
    	<level value="info"></level>
    	<appender-ref ref="file" />
    </logger>
     
    <logger name="ee.sk.utils.ConfigManager">
    	<level value="INFO"/>
    	<appender-ref ref="file" />
    </logger>
    <logger name="ee.sk.digidoc.DigiDocException">
    	<level value="INFO"/>
    	<appender-ref ref="file" />
    </logger>
    <logger name="ee.sk.digidoc.factory.PKCS11SignatureFactory">
    	<level value="INFO"/>
    	<appender-ref ref="file" />
    </logger>
    <logger name="ee.sk.digidoc.factory.IAIKNotaryFactory">
    	<level value="INFO"/>
    	<appender-ref ref="file" />
    </logger>
    <logger name="ee.sk.xmlenc.factory.EncryptedDataSAXParser">
    	<level value="INFO"/>
    	<appender-ref ref="file" />
    </logger>
    <logger name="ee.sk.xmlenc.EncryptedKey">
    	<level value="INFO"/>
    	<appender-ref ref="file" />
    </logger>
    <logger name="ee.sk.digidoc.Base64Util">
    	<level value="INFO"/>
    	<appender-ref ref="file" />
    </logger>
    <logger name="ee.sk.digidoc.factory.SAXDigiDocFactory">
    	<level value="DEBUG"/>
    	<appender-ref ref="file" />
    </logger>
    <logger name="ee.sk.digidoc.factory.BouncyCastleNotaryFactory">
    	<level value="DEBUG"/>
    	<appender-ref ref="file" />
    </logger>
    <logger name="ee.sk.xmlenc.factory.EncryptedStreamSAXParser">
    	<level value="DEBUG"/>
    	<appender-ref ref="file" />
    </logger>
    <logger name="ee.sk.digidoc.DataFile">
    	<level value="DEBUG"/>
    	<appender-ref ref="file" />
    </logger>
    <logger name="ee.sk.xmlenc.EncryptedData">
    	<level value="DEBUG"/>
    	<appender-ref ref="file" />
    </logger>
    
    <logger name="org.springframework.orm.hibernate3">
    	<level value="error"/>
    	<appender-ref ref="file" />
    </logger>
    
    <root>
		<level value="error" />
		<appender-ref ref="stdout" />
		<appender-ref ref="file" />
		<appender-ref ref="nagios" />
	</root>
	
</log4j:configuration>