<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>ee</groupId>
	<artifactId>adit</artifactId>
	<packaging>war</packaging>
	<version>0.0.1</version>
	<name>adit Maven Webapp</name>
	<url>http://maven.apache.org</url>

	<properties>
		<baseDir>C:\projektid\adit\adit</baseDir>
	</properties>

	<dependencies>
		<dependency>
			<groupId>ee.webmedia</groupId>
			<artifactId>xtee-server</artifactId>
			<version>1.0</version>
			<scope>system</scope>
			<systemPath>${baseDir}\lib\xtee-server-1.0-RC1.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>ee.webmedia</groupId>
			<artifactId>xtee-client</artifactId>
			<version>1.0</version>
			<scope>system</scope>
			<systemPath>${baseDir}\lib\xtee-client-1.0-RC1.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>ee.ria</groupId>
			<artifactId>teavituskalender-types</artifactId>
			<version>1.0</version>
			<scope>system</scope>
			<systemPath>${baseDir}\lib\teavituskalender-types.jar</systemPath>
		</dependency>

		<!-- Spring -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>ws</artifactId>
			<version>1.5.9</version>
			<scope>system</scope>
			<systemPath>${baseDir}\lib\spring-ws-1.5.9-all.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring</artifactId>
			<version>3.0.2</version>
			<scope>system</scope>
			<systemPath>${baseDir}\lib\spring.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>servlet</artifactId>
			<version>2.5.6</version>
			<scope>system</scope>
			<systemPath>${baseDir}\lib\spring-webmvc.jar</systemPath>
		</dependency>


		<!-- Castor -->
		<dependency>
			<groupId>org.castor</groupId>
			<artifactId>castor</artifactId>
			<version>1.3.1</version>
			<scope>system</scope>
			<systemPath>${baseDir}\lib\castor-1.3.1.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>org.castor</groupId>
			<artifactId>core</artifactId>
			<version>1.3.1</version>
			<scope>system</scope>
			<systemPath>${baseDir}\lib\castor-1.3.1-core.jar</systemPath>
		</dependency>


		<!-- WSDL -->
		<dependency>
			<groupId>java</groupId>
			<artifactId>wsdl4j</artifactId>
			<version>1.6.1</version>
			<scope>system</scope>
			<systemPath>${baseDir}\lib\wsdl4j-1.6.1.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>java</groupId>
			<artifactId>wsdl4j-qname</artifactId>
			<version>1.6.1</version>
			<scope>system</scope>
			<systemPath>${baseDir}\lib\wsdl4j-qname-1.6.1.jar</systemPath>
		</dependency>
		
		<!-- Logging -->
		<dependency>
			<groupId>org.apache</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.16</version>
			<scope>system</scope>
			<systemPath>${baseDir}\lib\log4j-1.2.16.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>org.apache</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.1.1</version>
			<scope>system</scope>
			<systemPath>${baseDir}\lib\commons-logging-1.1.1.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>slf4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.6.0</version>
			<scope>system</scope>
			<systemPath>${baseDir}\lib\slf4j-log4j12-1.5.8.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>java</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.5.10</version>
			<scope>system</scope>
			<systemPath>${baseDir}/lib/slf4j-api-1.5.8.jar</systemPath>
		</dependency>

		<!-- Hibernate -->
		<dependency>
			<groupId>java</groupId>
			<artifactId>antlr</artifactId>
			<version>2.7.6</version>
			<scope>system</scope>
			<systemPath>${baseDir}/lib/antlr-2.7.6.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>java</groupId>
			<artifactId>commons-collections</artifactId>
			<version>3.1</version>
			<scope>system</scope>
			<systemPath>${baseDir}/lib/commons-collections-3.1.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>java</groupId>
			<artifactId>dom4j</artifactId>
			<version>1.6.1</version>
			<scope>system</scope>
			<systemPath>${baseDir}/lib/dom4j-1.6.1.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>java</groupId>
			<artifactId>hibernate3</artifactId>
			<version>1.6.1</version>
			<scope>system</scope>
			<systemPath>${baseDir}/lib/hibernate3.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>java</groupId>
			<artifactId>javassist</artifactId>
			<version>3.9.0.GA</version>
			<scope>system</scope>
			<systemPath>${baseDir}/lib/javassist-3.9.0.GA.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>java</groupId>
			<artifactId>jta</artifactId>
			<version>1.1</version>
			<scope>system</scope>
			<systemPath>${baseDir}/lib/jta-1.1.jar</systemPath>
		</dependency>
		

		<!-- Oracle -->
		<dependency>
			<groupId>java</groupId>
			<artifactId>ojdbc</artifactId>
			<version>1.6</version>
			<scope>system</scope>
			<systemPath>${baseDir}/lib/ojdbc6.jar</systemPath>
		</dependency>
		
		<!-- Codec -->
		<dependency>
			<groupId>commons</groupId>
			<artifactId>codec</artifactId>
			<version>1.4</version>
			<scope>system</scope>
			<systemPath>${baseDir}/lib/commons-codec-1.4.jar</systemPath>
		</dependency>
		
		<!-- DigiDoc -->
		<dependency>
			<groupId>ee.sk.digidoc</groupId>
			<artifactId>DigiDocLib</artifactId>
			<version>2.3.19</version>
			<scope>system</scope>
			<systemPath>${baseDir}/lib/JDigiDoc.jar</systemPath>
		</dependency>
		
	</dependencies>

	<build>
		<finalName>adit</finalName>
		<sourceDirectory>src/main/java</sourceDirectory>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
			</resource>
			<resource>
				<directory>${baseDir}/lib</directory>
				<includes>
					<include>*</include>
				</includes>
				<targetPath>../adit/WEB-INF/lib</targetPath>
			</resource>
			<resource>
				<directory>${baseDir}/src/main/resources</directory>
				<includes>
					<include>*</include>
				</includes>
				<targetPath>../adit/WEB-INF</targetPath>
			</resource>
		</resources>
		<plugins>

			<!-- Compiler -->

			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1-beta-1</version>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>tomcat-maven-plugin</artifactId>
				<configuration>
					<server>tomcat6</server>
					<warFile>${baseDir}/target/adit.war</warFile>
				</configuration>
			</plugin>

		</plugins>

	</build>

</project>
