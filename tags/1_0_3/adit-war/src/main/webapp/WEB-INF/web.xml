<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<display-name>Ametlikud Dokumendid</display-name>

	<context-param>
	  	<param-name>contextConfigLocation</param-name>
	  	<param-value>
		    /WEB-INF/adit-servlet.xml
		    /WEB-INF/adit-monitor-servlet.xml
	  	</param-value>
	</context-param>

	<!-- take especial notice of the name of this servlet -->
	<servlet>
		<servlet-name>adit-monitor</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>adit</servlet-name>
		<servlet-class>org.springframework.ws.transport.http.MessageDispatcherServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>adit-monitor</servlet-name>
		<url-pattern>/monitor/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>adit</servlet-name>
		<url-pattern>/service/*</url-pattern>
	</servlet-mapping>

</web-app>
