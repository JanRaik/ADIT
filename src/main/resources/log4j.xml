<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>
	
 	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
	   	<layout class="org.apache.log4j.PatternLayout">
	    	<param name="ConversionPattern" value="%d{ABSOLUTE}%5p %C:%L - %m%n"/>
		</layout>
    </appender>
    
    <appender name="file" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="C:/adit.log" />
		<param name="datePattern" value="'.'yyyy-MM" />
		<param name="append" value="true" /> 
		<layout class="org.apache.log4j.PatternLayout">
	    	<param name="ConversionPattern" value="%d{ABSOLUTE}%5p %C:%L - %m%n"/>
		</layout>
    </appender>
    
    <appender name="dvk" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="C:/adit_dvk.log" />
		<param name="datePattern" value="'.'yyyy-MM" />
		<param name="append" value="true" /> 
		<layout class="org.apache.log4j.PatternLayout">
	    	<param name="ConversionPattern" value="%d{ABSOLUTE}%5p %C:%L - %m%n"/>
		</layout>
    </appender>
    
    <logger name="ee.adit.ws">
    	<level value="DEBUG"></level>
    </logger>
    
    <logger name="ee.adit.dao">
    	<level value="DEBUG"></level>
    </logger>
    
    <logger name="ee.adit.service">
    	<level value="DEBUG"></level>
    </logger>
    
    <logger name="dvk">
    	<level value="DEBUG"></level>
    </logger>
    
    <logger name="ee.adit.dvk">
    	<level value="DEBUG"/>
    	<appender-ref ref="dvk"/>
    	<appender-ref ref="stdout" />    	
    </logger>
    
    <logger name="org.hibernate">
    	<level value="ERROR"></level>
    	<appender-ref ref="file" />
    </logger>
    
    <logger name="org.springframework.orm.hibernate3">
    	<level value="INFO"/>
    	<appender-ref ref="file" />
    </logger>
    
    <root>
		<level value="error" />
		<appender-ref ref="stdout" />
	</root>
	
</log4j:configuration>