<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jee="http://www.springframework.org/schema/jee" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/aop
	http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-2.5.xsd
	http://www.springframework.org/schema/jee
	http://www.springframework.org/schema/jee/spring-jee-2.5.xsd
	http://www.springframework.org/schema/tx
	http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">

	<!-- Endpoints -->
	
	<bean id="JoinEndpoint" class="ee.adit.ws.endpoint.JoinEndpoint">
		<property name="marshaller" ref="castorMarshaller"/>
		<property name="unmarshaller" ref="castorMarshaller"/>
		<property name="userService" ref="userService"/>
		<property name="messageSource" ref="messageSource"/>
	</bean>
	
	<bean id="UnJoinEndpoint" class="ee.adit.ws.endpoint.UnJoinEndpoint">
	</bean>
	<bean id="GetJoinedEndpoint" class="ee.adit.ws.endpoint.GetJoinedEndpoint">
	</bean>
	<bean id="GetUserInfoEndpoint" class="ee.adit.ws.endpoint.GetUserInfoEndpoint">
	</bean>
	<bean id="GetDocumentEndpoint" class="ee.adit.ws.endpoint.GetDocumentEndpoint">
	</bean>
	<bean id="ListMethodsEndpoint" class="ee.webmedia.xtee.endpoint.ListMethodsEndpoint">
	</bean>

	<!-- Endpoint Mappings -->
	<bean id="endpointMapping"
		class="org.springframework.ws.server.endpoint.mapping.PayloadRootQNameEndpointMapping">
		<property name="mappings">
			<props>
				<prop
					key="{http://producers.ametlikud-dokumendid.xtee.riik.ee/producer/ametlikud-dokumendid}Join">JoinEndpoint</prop>
				<prop
					key="{http://producers.ametlikud-dokumendid.xtee.riik.ee/producer/ametlikud-dokumendid}unJoin">UnJoinEndpoint</prop>
				<prop
					key="{http://producers.ametlikud-dokumendid.xtee.riik.ee/producer/ametlikud-dokumendid}getJoined">GetJoinedEndpoint</prop>
				<prop
					key="{http://producers.ametlikud-dokumendid.xtee.riik.ee/producer/ametlikud-dokumendid}getUserInfo">GetUserInfoEndpoint</prop>
				<prop
					key="{http://producers.ametlikud-dokumendid.xtee.riik.ee/producer/ametlikud-dokumendid}getDocument">GetDocumentEndpoint</prop>
				<prop
					key="{http://producers.ametlikud-dokumendid.xtee.riik.ee/producer/ametlikud-dokumendid}listMethods">ListMethodsEndpoint</prop>
			</props>
		</property>
	</bean>


	<context:component-scan base-package="ee.adit.ws.endpoint" />

	<bean id="contextPath" class="java.lang.String">
		<constructor-arg type="java.lang.String" value="ee.adit.pojo" />
	</bean>
	<bean id="schema" class="org.springframework.xml.xsd.SimpleXsdSchema">
		<property name="xsd" value="/WEB-INF/adit.xsd" />
	</bean>
	<bean id="adit" class="ee.webmedia.xtee.wsdl.XTeeWsdlDefinition">
		<property name="schema" ref="schema" />
		<property name="portTypeName" value="adit" />
	</bean>
	<bean id="xteeDatabase" class="java.lang.String">
		<constructor-arg value="ametlikud-dokumendid" />
	</bean>

	<!-- Castor Marshaller -->
	<bean id="castorMarshaller" class="org.springframework.oxm.castor.CastorMarshaller">
		<property name="mappingLocation" value="classpath:/adit-castor-mapping.xml" />
	</bean>







	<!-- Service Classes -->
	<bean id="userService" class="ee.adit.service.UserService">
		<property name="remoteApplicationDAO" ref="remoteApplicationDAO"></property>
		<property name="usertypeDAO" ref="usertypeDAO"></property>
		<property name="aditUserDAO" ref="aditUserDAO"></property>
		
	</bean>

	<bean id="myDataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
		<property name="url" value="jdbc:oracle:thin:@localhost:1521:XE" />
		<property name="username" value="adit" />
		<property name="password" value="adit" />
	</bean>

	<bean id="mySessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource" ref="myDataSource" />
		<property name="mappingResources">
			<list>
				<value>ee/adit/dao/hbm/DocumentType.hbm.xml</value>
				<value>ee/adit/dao/hbm/Document.hbm.xml</value>
				<value>ee/adit/dao/hbm/DocumentSharing.hbm.xml</value>
				<value>ee/adit/dao/hbm/DocumentFile.hbm.xml</value>
				<value>ee/adit/dao/hbm/DocumentHistory.hbm.xml</value>
				<value>ee/adit/dao/hbm/DocumentWfStatus.hbm.xml</value>
				<value>ee/adit/dao/hbm/DocumentDvkStatus.hbm.xml</value>
				<value>ee/adit/dao/hbm/RemoteApplication.hbm.xml</value>
				<value>ee/adit/dao/hbm/AccessRestriction.hbm.xml</value>
				<value>ee/adit/dao/hbm/DocumentHistoryType.hbm.xml</value>
				<value>ee/adit/dao/hbm/DocumentSharingType.hbm.xml</value>
				<value>ee/adit/dao/hbm/Signature.hbm.xml</value>
				<value>ee/adit/dao/hbm/AditUser.hbm.xml</value>
				<value>ee/adit/dao/hbm/Usertype.hbm.xml</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<value>
				hibernate.dialect = org.hibernate.dialect.Oracle10gDialect
			</value>
		</property>
	</bean>

	<bean id="remoteApplicationDAO" class="ee.adit.dao.RemoteApplicationDAO">
		<property name="sessionFactory" ref="mySessionFactory" />
	</bean>
	
	<bean id="usertypeDAO" class="ee.adit.dao.UsertypeDAO">
		<property name="sessionFactory" ref="mySessionFactory" />
	</bean>
	
	<bean id="aditUserDAO" class="ee.adit.dao.AditUserDAO">
		<property name="sessionFactory" ref="mySessionFactory" />
	</bean>

	<!-- MessageSource -->
	<bean id="messageSource"
		class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>messages</value>
			</list>
		</property>
	</bean>

</beans>